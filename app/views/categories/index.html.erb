<h2>Listing Categories</h2>

<table>
	<thead>
		<tr>
			<th> Name </th>
			<th> Master Category </th>
			<th> Courses </th>
		</tr>
	</thead>
	<tbody>
		<% @categories.each do |category| %>
			<tr>		
				<td><%= link_to category.name, category_path(category) %></td>
				<td><%= category.master_category.try(:name) %></td>
				<td><%= category.courses.count %></td>
			</tr>	
		<% end %>
	</tbody>
</table>

<!-- 
<a href="/categories/new">Add Category</a>
-->

<% if (user_signed_in?) && (can? :create, Category.new) %> 
	<%= link_to "Add Category", new_category_path %>
<% end %>